{
  "include": ["src/**/*.ts", "src/utils/tls/index.ts", "src/main.ts"],

  "compilerOptions": {
    "strict": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "ES2020",
    // "esModuleInterop": true, // This allows "type": "module" in package.json, which allows using "import" instead of "require" in .ts files.
    
    "sourceMap": true, // for debugging purposes.
    "outDir": "dist", // for our compiled JavaScript files

    // "resolveJsonModule": true, // enable importing JSON files as modules.
    // "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "types": [
    "src/**/types.ts",
    "src/**/__types.ts",
    "../common/types-*.ts",
    "../client/template/**/__types.ts",
  ],
}
